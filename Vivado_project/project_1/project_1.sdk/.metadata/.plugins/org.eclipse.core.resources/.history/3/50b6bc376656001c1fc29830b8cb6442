#ifndef SRC_NEURALNETWORK_H_
#define SRC_NEURALNETWORK_H_
#include "xneuralnetwork.h"
#include "xparameters.h"
	 #define ONE_SECOND 325000000 // half of the CPU clock speed


class NeuralNetwork
{
public:
	static NeuralNetwork* getInstance();
